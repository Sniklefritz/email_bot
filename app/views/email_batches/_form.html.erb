<%= form_with model: @email_batch, local: true do |form| %>

  <% if @email_batch.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@email_batch.errors.count, "error") %>
        prohibited this article from being saved:
      </h2>
      <ul>
        <% @email_batch.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %><br>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
